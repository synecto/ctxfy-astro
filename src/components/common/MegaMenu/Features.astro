---
import Icon from "@ui/icons/Icon.astro";
import { getNavigationData } from "@lib/query/navigation";
import { featuresMenu as fallbackFeaturesMenu } from "@utils/megaMenu/features";

const currentPath = Astro.url.pathname;
const navigationData = await getNavigationData();

// Use Sanity data or fallback to static data
const featuresMenu = navigationData?.featuresMenu?.sections || fallbackFeaturesMenu;
---

<div
  class="hs-dropdown [--adaptive:none] [--is-collapse:true] [--strategy:static] xl:[--is-collapse:false] xl:[--strategy:absolute] xl:[--trigger:hover]"
>
  <button
    id="mega-menu-features"
    type="button"
    class={`hs-dropdown-toggle flex w-full items-center gap-1 rounded-lg px-3 py-1.5 text-sm font-medium text-slate-600 hover:text-slate-900 focus:outline-hidden ${
      currentPath.startsWith("/features") ? "text-slate-900" : ""
    }`}
    aria-haspopup="menu"
    aria-expanded="false"
    aria-label="Features Menu"
  >
    Features <svg class="size-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
  </button>

  <div
    class="hs-dropdown-menu relative start-0 top-full z-[60] mt-2 hidden min-w-60 opacity-0 transition-[opacity,margin] duration-150 before:absolute before:-top-5 before:start-0 before:h-5 before:w-full hs-dropdown-open:opacity-100 xl:left-0 xl:duration-300"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="mega-menu-features"
  >
    <div
      class="rounded-xl border border-slate-200 bg-white p-2 shadow-xl ring-1 ring-slate-950/5 xl:w-[480px]"
    >
      <div class="grid gap-1 p-2">
        {
          featuresMenu.map((section) => (
            <div class="flex flex-col gap-1">
              <p class="px-3 py-2 text-[11px] font-semibold uppercase tracking-wider text-slate-400">
                {section.sectionTitle}
              </p>

              {section.items.map((item) => (
                <a
                  class="group flex items-start gap-4 rounded-lg p-3 transition-colors hover:bg-slate-50 focus:bg-slate-50 focus:outline-hidden"
                  href={item.href}
                >
                  <div class="flex size-9 shrink-0 items-center justify-center rounded-lg border border-slate-200 bg-white shadow-xs group-hover:border-slate-300">
                    {item.icon && <Icon name={item.icon} class="size-5 text-slate-600 group-hover:text-slate-900" />}
                  </div>

                  <div class="grow">
                    <p class="text-sm font-medium text-slate-900">
                      {item.label || item.title}
                    </p>
                    {item.description && <p class="mt-0.5 text-xs text-slate-500 line-clamp-1">{item.description}</p>}
                  </div>
                </a>
              ))}
            </div>
          ))
        }
      </div>
      
      <div class="mt-2 border-t border-slate-100 bg-slate-50/50 p-3 rounded-b-lg">
        <a href="/features" class="flex items-center justify-between text-xs font-medium text-slate-600 hover:text-slate-900">
          Explore all features
          <svg class="size-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </div>
</div>
