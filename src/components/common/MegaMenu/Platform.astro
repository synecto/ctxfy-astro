---
import Icon from "@ui/icons/Icon.astro";
import { Image } from "astro:assets";
import { getNavigationData } from "@lib/query/navigation";
import { platformMenu as fallbackPlatformMenu } from "@utils/megaMenu/platform";

import datanova from "@images/datanova.webp";
import if_cloud from "@images/if_cloud.webp";
import if_planner from "@images/if_planner.webp";
import if_visualizer from "@images/if_visualizer.webp";

// Image names in '@utils/megaMenu/platform' must match the keys in 'imagesMap' to ensure correct image mapping
const imagesMap: any = {
  datanova,
  if_cloud,
  if_planner,
  if_visualizer,
};

const currentPath = Astro.url.pathname;
const navigationData = await getNavigationData();

// Use Sanity data or fallback to static data
const platformMenu = navigationData?.platformMenu?.items || fallbackPlatformMenu;
---

<div
  class="hs-dropdown [--adaptive:none] [--is-collapse:true] [--strategy:static] xl:[--is-collapse:false] xl:[--strategy:absolute] xl:[--trigger:hover]"
>
  <button
    id="mega-menu-platform"
    type="button"
    class={`hs-dropdown-toggle flex w-full items-center gap-1 rounded-lg px-3 py-1.5 text-sm font-medium text-slate-600 hover:text-slate-900 focus:outline-hidden ${
      currentPath.startsWith("/platform") ? "text-slate-900" : ""
    }`}
    aria-haspopup="menu"
    aria-expanded="false"
    aria-label="Platform Menu"
  >
    Platform <svg class="size-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
  </button>

  <div
    class="hs-dropdown-menu relative start-0 top-full z-[60] mt-2 hidden min-w-60 opacity-0 transition-[opacity,margin] duration-150 before:absolute before:-top-5 before:start-0 before:h-5 before:w-full hs-dropdown-open:opacity-100 xl:left-0 xl:duration-300"
    role="menu"
    aria-orientation="vertical"
    aria-labelledby="mega-menu-platform"
  >
    <div
      class="rounded-xl border border-slate-200 bg-white p-2 shadow-xl ring-1 ring-slate-950/5 xl:w-[600px]"
    >
      <div
        class="grid grid-cols-1 gap-1 p-2 sm:grid-cols-2"
      >
        {
          platformMenu.map((platform) => (
            <a
              class="group flex flex-col rounded-lg p-3 transition hover:bg-slate-50 focus:bg-slate-50 focus:outline-hidden"
              href={platform.href}
            >
              <div class="overflow-hidden rounded-lg border border-slate-200">
                <Image
                  class="aspect-video w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
                  src={imagesMap[platform.image]}
                  alt={platform.title}
                />
              </div>

              <div class="mt-3">
                <h3 class="text-sm font-medium text-slate-900 group-hover:text-teal-600">
                  {platform.title}
                </h3>
                <p class="mt-1 text-xs text-slate-500 line-clamp-2">
                  {platform.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>
      
      <div class="mt-2 border-t border-slate-100 bg-slate-50/50 p-3 rounded-b-lg">
        <a href="/platform" class="flex items-center justify-between text-xs font-medium text-slate-600 hover:text-slate-900">
          Explore the full platform
          <svg class="size-3.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </div>
</div>
