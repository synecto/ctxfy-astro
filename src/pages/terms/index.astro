---
export const prerender = true;
import Layout from "@layout/Layout.astro";
import type { WithContext, Thing } from "schema-dts";

// SEO metadata for the page
const seo = {
  title: "Terms & Conditions - DataNova",
  description:
    "Read DataNova's Terms and Conditions to understand the terms of use for our services and software.",
};

// Schema.org metadata for SEO
const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "Terms & Conditions - DataNova",
  description:
    "DataNova's Terms and Conditions outline the terms of use for our services and software applications.",
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "DataNova",
    description:
      "DataNova Analytics Inc. provides advanced analytics for Excel to help businesses unlock actionable insights quickly with no coding required.",
  },
};

const lastUpdated = "January 2024";
---

<Layout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-28 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <h1
        class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
      >
        Terms & Conditions
      </h1>
      <p class="mt-4 text-slate-600">Last updated: {lastUpdated}</p>

      <div class="prose prose-slate mt-12 max-w-none">
        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-slate-800 mb-4">
            1. Agreement to Terms
          </h2>
          <p class="text-slate-700 leading-relaxed">
            By accessing or using the services provided by DataNova Analytics Inc.
            ("DataNova," "we," "our," or "us"), including our website, software
            applications, and related services (collectively, the "Services"), you
            agree to be bound by these Terms and Conditions ("Terms"). If you do
            not agree to these Terms, please do not use our Services.
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-slate-800 mb-4">
            2. Use of Services
          </h2>
          <h3 class="text-xl font-semibold text-slate-800 mb-3">
            2.1 License
