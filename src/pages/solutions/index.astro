---
import Layout from "@/layout/Layout.astro";
---

<Layout title="Solutions | Ctxfy">
  <main class="container section">
    <h1 class="section-title">Explore Our Solutions</h1>
    <p class="section-copy">
      Discover how Ctxfy can help your business thrive across various industries and use cases.
    </p>
    <div class="offer-grid">
      <div class="offer-card">
        <div class="offer-art"></div>
        <h3 class="offer-title">Financial Services</h3>
        <p class="offer-text">Personalize the banking experience</p>
        <a href="/solutions/financial-services" class="btn-primary" style="margin-top: 12px;">Learn more</a>
      </div>
      <div class="offer-card">
        <div class="offer-art"></div>
        <h3 class="offer-title">B2B</h3>
        <p class="offer-text">Maximize product adoption</p>
        <a href="/solutions/b2b" class="btn-primary" style="margin-top: 12px;">Learn more</a>
      </div>
      <div class="offer-card">
        <div class="offer-art"></div>
        <h3 class="offer-title">Media</h3>
        <p class="offer-text">Identify impactful content</p>
        <a href="/solutions/media" class="btn-primary" style="margin-top: 12px;">Learn more</a>
      </div>
    </div>
  </main>
</Layout>
